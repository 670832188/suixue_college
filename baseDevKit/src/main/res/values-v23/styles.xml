<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">serif</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaseTheme.BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_common_white</item>
        <item name="colorPrimaryDark">@color/color_common_white</item>
        <item name="colorAccent">@color/color_common_white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@color/color_main_status_bar</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BaseTheme.TranslucentStatusTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>